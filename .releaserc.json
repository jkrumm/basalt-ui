{
  "branches": ["master"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    ["@semantic-release/changelog", { "changelogFile": "packages/basalt-ui/CHANGELOG.md" }],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "node -e \"const fs=require('fs');const p=JSON.parse(fs.readFileSync('packages/basalt-ui/package.json','utf8'));p.version='${nextRelease.version}';fs.writeFileSync('packages/basalt-ui/package.json',JSON.stringify(p,null,2)+'\\n');\""
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["packages/basalt-ui/CHANGELOG.md", "packages/basalt-ui/package.json"],
        "message": "chore: release ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}
