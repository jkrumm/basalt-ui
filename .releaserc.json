{
  "branches": ["master"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    ["@semantic-release/changelog", { "changelogFile": "packages/basalt-ui/CHANGELOG.md" }],
    ["@semantic-release/npm", { "npmPublish": false, "pkgRoot": "packages/basalt-ui" }],
    [
      "@semantic-release/git",
      {
        "assets": ["packages/basalt-ui/CHANGELOG.md", "packages/basalt-ui/package.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}
