---
import '../styles/global.css';

import Navigation from '@/components/layout/Navigation.astro';
import ThemeScript from '@/components/shared/ThemeScript.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Basalt UI - Unified Design System for Modern UI Libraries',
  description = 'One Tailwind CSS theme that unifies components, docs, and dashboards. Basalt UI brings visual consistency to modern UI libraries.',
} = Astro.props;

// Create canonical URL with fallback for development
const canonicalURL = Astro.site ? new URL(Astro.url.pathname, Astro.site) : null;
---

<!doctype html>
<html lang="en">
  <head>
    <ThemeScript />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="darkreader-lock" />

    <!-- Fonts loaded via basalt-ui package (see global.css) -->

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    {canonicalURL && <link rel="canonical" href={canonicalURL} />}

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    {canonicalURL && <meta property="og:url" content={canonicalURL} />}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Umami Analytics -->
    <script
      is:inline
      defer
      src="https://umami.jkrumm.com/script.js"
      data-website-id="d6758a6a-6006-4f77-a778-54b74c3ac53d"
      data-do-not-track="true"></script>
  </head>
  <body class="bg-background text-foreground min-h-screen antialiased">
    <Navigation />
    <slot />
  </body>
</html>
