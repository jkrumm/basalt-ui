---
import '../styles/global.css';

import ThemeScript from '@/components/shared/ThemeScript.astro';
import ThemeToggle from '@/components/shared/ThemeToggle';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Basalt UI - Framework-agnostic Tailwind CSS Design System',
  description = 'A zinc-based Tailwind CSS design system with React components.',
} = Astro.props;

// Create canonical URL with fallback for development
const canonicalURL = Astro.site ? new URL(Astro.url.pathname, Astro.site) : null;
---

<!doctype html>
<html lang="en">
  <head>
    <ThemeScript />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="darkreader-lock" />

    <!-- Google Fonts - Zero-flicker loading strategy -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    {
      (() => {
        // Build font URL once, reuse across preload/link/noscript
        const fontUrl = new URL('https://fonts.googleapis.com/css2');
        fontUrl.searchParams.set('family', 'Lato:wght@400;700');
        fontUrl.searchParams.append('family', 'Nunito+Sans:wght@400');
        fontUrl.searchParams.append('family', 'JetBrains+Mono:wght@400');
        fontUrl.searchParams.set('display', 'swap');
        const href = fontUrl.toString();

        return (
          <>
            <link rel="preload" as="style" href={href} fetchpriority="high" />
            <link rel="stylesheet" href={href} media="print" onload="this.media='all'" />
            <noscript>
              <link rel="stylesheet" href={href} />
            </noscript>
          </>
        );
      })()
    }

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    {canonicalURL && <link rel="canonical" href={canonicalURL} />}

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    {canonicalURL && <meta property="og:url" content={canonicalURL} />}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
  </head>
  <body class="bg-background text-foreground min-h-screen antialiased">
    <header class="border-b">
      <div class="container mx-auto flex items-center justify-between px-4 py-4">
        <a href="/" class="text-xl font-bold">Basalt UI</a>
        <nav class="flex items-center gap-6">
          <a
            href="/typography"
            class="text-muted-foreground hover:text-foreground transition-colors"
          >
            Typography
          </a>
          <a href="/colors" class="text-muted-foreground hover:text-foreground transition-colors">
            Colors
          </a>
          <a href="/spacing" class="text-muted-foreground hover:text-foreground transition-colors">
            Spacing
          </a>
        </nav>
        <ThemeToggle client:load />
      </div>
    </header>
    <slot />
  </body>
</html>
