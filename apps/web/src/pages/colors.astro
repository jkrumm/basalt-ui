---
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import Layout from '@/layouts/Layout.astro';

const semanticColors = [
  {
    name: 'Background',
    variable: '--background',
    light: 'oklch(0.985 0.002 90)',
    dark: 'oklch(0.21 0.012 285)',
    usage: 'Page background',
    class: 'bg-background text-foreground',
  },
  {
    name: 'Foreground',
    variable: '--foreground',
    light: 'oklch(0.265 0.015 285)',
    dark: 'oklch(0.935 0.005 90)',
    usage: 'Primary text color',
    class: 'bg-foreground text-background',
  },
  {
    name: 'Primary (Blue)',
    variable: '--primary',
    light: 'oklch(0.692 0.097 252.0)',
    dark: 'oklch(0.692 0.097 252.0)',
    usage: 'Actions, links, focus states',
    class: 'bg-primary text-primary-foreground',
  },
  {
    name: 'Secondary',
    variable: '--secondary',
    light: 'oklch(0.95 0.006 270)',
    dark: 'oklch(0.26 0.013 285)',
    usage: 'Subtle backgrounds, alternative actions',
    class: 'bg-secondary text-secondary-foreground',
  },
  {
    name: 'Accent',
    variable: '--accent',
    light: 'oklch(0.794 0.102 219.9)',
    dark: 'oklch(0.794 0.102 219.9)',
    usage: 'Hover states, highlights',
    class: 'bg-accent text-accent-foreground',
  },
  {
    name: 'Destructive',
    variable: '--destructive',
    light: 'oklch(0.627 0.192 23.6)',
    dark: 'oklch(0.627 0.192 23.6)',
    usage: 'Errors, warnings, delete actions',
    class: 'bg-destructive text-destructive-foreground',
  },
  {
    name: 'Muted',
    variable: '--muted',
    light: 'oklch(0.96 0.004 270)',
    dark: 'oklch(0.27 0.013 285)',
    usage: 'Disabled states, subtle backgrounds',
    class: 'bg-muted text-muted-foreground',
  },
  {
    name: 'Card',
    variable: '--card',
    light: 'oklch(0.99 0.002 90)',
    dark: 'oklch(0.22 0.012 285)',
    usage: 'Card surfaces, elevated content',
    class: 'bg-card text-card-foreground',
  },
  {
    name: 'Border',
    variable: '--border',
    light: 'oklch(0.93 0.005 270)',
    dark: 'oklch(0.27 0.013 285)',
    usage: 'Borders, dividers, input borders',
    class: 'bg-border',
  },
];

const auroraColors = [
  {
    name: 'Red',
    variable: '--red',
    value: 'oklch(0.6061 0.1206 15.34)',
    usage: 'Errors, destructive actions, critical warnings',
    class: 'bg-red text-white',
  },
  {
    name: 'Orange',
    variable: '--orange',
    value: 'oklch(0.6929 0.0963 38.24)',
    usage: 'Annotations, moderate warnings, special states',
    class: 'bg-orange text-foreground',
  },
  {
    name: 'Yellow',
    variable: '--yellow',
    value: 'oklch(0.8549 0.0892 84.09)',
    usage: 'Caution, important highlights, attention',
    class: 'bg-yellow text-foreground',
  },
  {
    name: 'Green',
    variable: '--green',
    value: 'oklch(0.7683 0.0749 131.06)',
    usage: 'Success states, confirmations, positive actions',
    class: 'bg-green text-foreground',
  },
  {
    name: 'Purple',
    variable: '--purple',
    value: 'oklch(0.6921 0.0625 332.66)',
    usage: 'Special features, unique identifiers, rare elements',
    class: 'bg-purple text-white',
  },
];

const blueVariants = [
  {
    name: 'Blue',
    variable: '--blue',
    value: 'oklch(0.6965 0.0591 248.69)',
    usage: 'Primary accent - actions, links, focus states',
    class: 'bg-blue text-white',
  },
  {
    name: 'Blue Light',
    variable: '--blue-light',
    value: 'oklch(0.78 0.045 249)',
    usage: 'Hover states, highlights, accent backgrounds',
    class: 'bg-blue-light text-foreground',
  },
  {
    name: 'Blue Deep',
    variable: '--blue-deep',
    value: 'oklch(0.5944 0.0772 254.03)',
    usage: 'Strong emphasis, high contrast',
    class: 'bg-blue-deep text-white',
  },
];

const chartBlues = [
  { name: 'Chart Blue 1', variable: '--chart-blue-1', class: 'bg-chart-blue-1', lightness: '0.90' },
  { name: 'Chart Blue 2', variable: '--chart-blue-2', class: 'bg-chart-blue-2', lightness: '0.80' },
  { name: 'Chart Blue 3', variable: '--chart-blue-3', class: 'bg-chart-blue-3', lightness: '0.72' },
  { name: 'Chart Blue 4', variable: '--chart-blue-4', class: 'bg-chart-blue-4', lightness: '0.65' },
  { name: 'Chart Blue 5', variable: '--chart-blue-5', class: 'bg-chart-blue-5', lightness: '0.55' },
  { name: 'Chart Blue 6', variable: '--chart-blue-6', class: 'bg-chart-blue-6', lightness: '0.45' },
  { name: 'Chart Blue 7', variable: '--chart-blue-7', class: 'bg-chart-blue-7', lightness: '0.35' },
  { name: 'Chart Blue 8', variable: '--chart-blue-8', class: 'bg-chart-blue-8', lightness: '0.25' },
];

const chartColors = [
  { name: 'Chart 1', variable: '--chart-1', class: 'bg-chart-1' },
  { name: 'Chart 2', variable: '--chart-2', class: 'bg-chart-2' },
  { name: 'Chart 3', variable: '--chart-3', class: 'bg-chart-3' },
  { name: 'Chart 4', variable: '--chart-4', class: 'bg-chart-4' },
  { name: 'Chart 5', variable: '--chart-5', class: 'bg-chart-5' },
];
---

<Layout
  title="Colors - Basalt UI"
  description="OKLCH-based color system with semantic tokens inspired by volcanic landscapes"
>
  <main class="container mx-auto max-w-6xl px-4 py-16">
    <!-- Hero Section -->
    <div class="mb-16">
      <h1 class="text-display tracking-tight">Colors</h1>
      <p class="text-muted-foreground max-w-2xl">
        Basalt UI uses OKLCH color space for perceptually uniform, accessible colors. Our palette
        combines warm zinc neutrals with professional blue accents and expressive Aurora colors
        inspired by the Nord theme, creating a sophisticated design system that works beautifully in
        both light and dark modes.
      </p>
    </div>

    <!-- Color Philosophy Section -->
    <section class="mb-16">
      <h2>OKLCH Color Space</h2>
      <Card>
        <CardContent className="pt-6">
          <div class="grid gap-6 md:grid-cols-3">
            <div>
              <h3 class="mb-2 text-lg font-bold">L (Lightness)</h3>
              <p class="text-small text-muted-foreground">
                0-1 scale representing perceived brightness. Unlike HSL, changes in L correspond to
                human perception—no unexpected gray zones in gradients.
              </p>
            </div>
            <div>
              <h3 class="mb-2 text-lg font-bold">C (Chroma)</h3>
              <p class="text-small text-muted-foreground">
                Saturation matching human perception. Higher values = more vibrant. Consistent
                across different hues.
              </p>
            </div>
            <div>
              <h3 class="mb-2 text-lg font-bold">H (Hue)</h3>
              <p class="text-small text-muted-foreground">
                Color angle (0-360). 249° = blue, 15° = red, 38° = orange, 84° = yellow, 131° =
                green, 333° = purple, 285° = neutral zinc.
              </p>
            </div>
          </div>
          <div class="border-border bg-muted/50 mt-6 rounded border p-4">
            <p class="mb-2 text-sm font-bold">Why OKLCH?</p>
            <ul class="list-inside list-disc space-y-1 text-sm">
              <li>Perceptually uniform—gradients stay clean and predictable</li>
              <li>Better accessibility—easier to maintain proper contrast ratios</li>
              <li>Consistent saturation across hues</li>
              <li>Future-proof—native browser support with wide gamut displays</li>
            </ul>
          </div>
        </CardContent>
      </Card>
    </section>

    <!-- Semantic Color Tokens Section -->
    <section class="mb-16">
      <h2>Semantic Color Tokens</h2>
      <div class="grid gap-6">
        {
          semanticColors.map((color) => (
            <Card>
              <CardContent className="pt-6">
                <div class="grid gap-4 md:grid-cols-2">
                  <div>
                    <h3 class="mb-2 font-bold">{color.name}</h3>
                    <p class="text-small text-muted-foreground mb-4">{color.usage}</p>
                    <div class="space-y-2 font-mono text-sm">
                      <div>
                        <span class="text-muted-foreground">Variable:</span>{' '}
                        <code class="bg-muted rounded px-1.5 py-0.5">{color.variable}</code>
                      </div>
                      <div>
                        <span class="text-muted-foreground">Light:</span>{' '}
                        <code class="bg-muted rounded px-1.5 py-0.5">{color.light}</code>
                      </div>
                      <div>
                        <span class="text-muted-foreground">Dark:</span>{' '}
                        <code class="bg-muted rounded px-1.5 py-0.5">{color.dark}</code>
                      </div>
                    </div>
                  </div>
                  <div>
                    <div class={`${color.class} flex items-center justify-center rounded-lg p-8`}>
                      <span class="text-sm font-bold">Sample Text</span>
                    </div>
                  </div>
                </div>
              </CardContent>
            </Card>
          ))
        }
      </div>
    </section>

    <!-- Chart Colors Section -->
    <section class="mb-16">
      <h2>Categorical Chart Colors</h2>
      <Card>
        <CardContent className="pt-6">
          <p class="text-muted-foreground mb-6">
            Five distinct colors for categorical data visualization. Use when representing different
            categories or groups that require clear visual distinction.
          </p>
          <div class="grid gap-4 md:grid-cols-5">
            {
              chartColors.map((color) => (
                <div>
                  <div class={`${color.class} mb-2 h-24 rounded-lg`} />
                  <p class="text-small text-center font-mono">{color.name}</p>
                  <p class="text-caption text-muted-foreground text-center">{color.variable}</p>
                </div>
              ))
            }
          </div>
        </CardContent>
      </Card>
    </section>

    <!-- Aurora Colors Section -->
    <section class="mb-16">
      <h2>Aurora Colors</h2>
      <p class="text-muted-foreground mb-6">
        Expressive, semantic colors inspired by the Nord theme. These colors maintain consistent
        appearance across light and dark modes, serving as brand colors with clear semantic
        meanings.
      </p>
      <div class="grid gap-6">
        {
          auroraColors.map((color) => (
            <Card>
              <CardContent className="pt-6">
                <div class="grid gap-4 md:grid-cols-2">
                  <div>
                    <h3 class="mb-2 font-bold">{color.name}</h3>
                    <p class="text-small text-muted-foreground mb-4">{color.usage}</p>
                    <div class="space-y-2 font-mono text-sm">
                      <div>
                        <span class="text-muted-foreground">Variable:</span>{' '}
                        <code class="bg-muted rounded px-1.5 py-0.5">{color.variable}</code>
                      </div>
                      <div>
                        <span class="text-muted-foreground">Value:</span>{' '}
                        <code class="bg-muted rounded px-1.5 py-0.5">{color.value}</code>
                      </div>
                      <div>
                        <span class="text-muted-foreground">Class:</span>{' '}
                        <code class="bg-muted rounded px-1.5 py-0.5">{color.class}</code>
                      </div>
                    </div>
                  </div>
                  <div>
                    <div class={`${color.class} flex items-center justify-center rounded-lg p-8`}>
                      <span class="text-sm font-bold">Sample Text</span>
                    </div>
                  </div>
                </div>
              </CardContent>
            </Card>
          ))
        }
      </div>
    </section>

    <!-- Blue Variants Section -->
    <section class="mb-16">
      <h2>Blue Variants</h2>
      <p class="text-muted-foreground mb-6">
        Professional blue accents based on Nord Frost colors. Blue serves as the primary accent
        color, with variants for different UI states and emphasis levels.
      </p>
      <div class="grid gap-6">
        {
          blueVariants.map((color) => (
            <Card>
              <CardContent className="pt-6">
                <div class="grid gap-4 md:grid-cols-2">
                  <div>
                    <h3 class="mb-2 font-bold">{color.name}</h3>
                    <p class="text-small text-muted-foreground mb-4">{color.usage}</p>
                    <div class="space-y-2 font-mono text-sm">
                      <div>
                        <span class="text-muted-foreground">Variable:</span>{' '}
                        <code class="bg-muted rounded px-1.5 py-0.5">{color.variable}</code>
                      </div>
                      <div>
                        <span class="text-muted-foreground">Value:</span>{' '}
                        <code class="bg-muted rounded px-1.5 py-0.5">{color.value}</code>
                      </div>
                      <div>
                        <span class="text-muted-foreground">Class:</span>{' '}
                        <code class="bg-muted rounded px-1.5 py-0.5">{color.class}</code>
                      </div>
                    </div>
                  </div>
                  <div>
                    <div class={`${color.class} flex items-center justify-center rounded-lg p-8`}>
                      <span class="text-sm font-bold">Sample Text</span>
                    </div>
                  </div>
                </div>
              </CardContent>
            </Card>
          ))
        }
      </div>
    </section>

    <!-- Sequential Chart Palette Section -->
    <section class="mb-16">
      <h2>Sequential Chart Palette</h2>
      <Card>
        <CardContent className="pt-6">
          <p class="text-muted-foreground mb-6">
            Eight perceptually uniform blue tones for data visualization. Constant hue (249°) with
            progressive lightness increments and gradually increasing chroma ensures clear,
            accessible sequential data representation. All adjacent colors exceed WCAG 3:1 contrast
            requirements.
          </p>

          <!-- Gradient visualization -->
          <div class="mb-6 flex h-16 overflow-hidden rounded-lg">
            {chartBlues.map((color) => <div class={`${color.class} flex-1`} />)}
          </div>

          <!-- Individual swatches -->
          <div class="grid grid-cols-2 gap-4 md:grid-cols-4 lg:grid-cols-8">
            {
              chartBlues.map((color) => (
                <div>
                  <div class={`${color.class} mb-2 h-24 rounded-lg`} />
                  <p class="text-caption text-center font-mono">{color.name}</p>
                  <p class="text-caption text-muted-foreground text-center">L: {color.lightness}</p>
                </div>
              ))
            }
          </div>

          <div class="border-border bg-muted/50 mt-6 rounded border p-4">
            <p class="mb-2 text-sm font-bold">Usage</p>
            <ul class="list-inside list-disc space-y-1 text-sm">
              <li>Sequential data: temperature scales, density maps, intensity visualization</li>
              <li>Gradient backgrounds: from subtle (blue-1) to prominent (blue-8)</li>
              <li>Perceptually uniform: equal perceived steps between colors</li>
              <li>Accessible: maintains contrast ratios for readability</li>
            </ul>
          </div>
        </CardContent>
      </Card>
    </section>

    <!-- Usage Guidelines Section -->
    <section class="mb-16">
      <h2>Usage Guidelines</h2>
      <div class="grid gap-6 lg:grid-cols-2">
        <!-- Do's -->
        <Card>
          <CardHeader>
            <CardTitle>Do ✅</CardTitle>
          </CardHeader>
          <CardContent>
            <ul class="space-y-3 text-sm">
              <li class="flex gap-2">
                <span class="text-primary">•</span>
                <span>Use semantic color tokens (bg-primary, bg-blue, text-muted-foreground)</span>
              </li>
              <li class="flex gap-2">
                <span class="text-primary">•</span>
                <span>Rely on automatic dark mode switching via .dark class</span>
              </li>
              <li class="flex gap-2">
                <span class="text-primary">•</span>
                <span>Use blue (primary) for interactive elements and links</span>
              </li>
              <li class="flex gap-2">
                <span class="text-primary">•</span>
                <span>Use Aurora colors for semantic states (red = error, green = success)</span>
              </li>
              <li class="flex gap-2">
                <span class="text-primary">•</span>
                <span>Use chart-blue-* for sequential data, chart-* for categorical</span>
              </li>
              <li class="flex gap-2">
                <span class="text-primary">•</span>
                <span>Test contrast ratios for accessibility (WCAG AA minimum)</span>
              </li>
            </ul>
          </CardContent>
        </Card>

        <!-- Don'ts -->
        <Card>
          <CardHeader>
            <CardTitle>Don't ❌</CardTitle>
          </CardHeader>
          <CardContent>
            <ul class="space-y-3 text-sm">
              <li class="flex gap-2">
                <span class="text-destructive">•</span>
                <span>Don't use arbitrary color values (bg-[#f3f3f3])</span>
              </li>
              <li class="flex gap-2">
                <span class="text-destructive">•</span>
                <span>Don't use HSL or RGB colors (breaks OKLCH benefits)</span>
              </li>
              <li class="flex gap-2">
                <span class="text-destructive">•</span>
                <span>Don't use red for non-error states</span>
              </li>
              <li class="flex gap-2">
                <span class="text-destructive">•</span>
                <span>Don't manually handle dark mode (system does it automatically)</span>
              </li>
              <li class="flex gap-2">
                <span class="text-destructive">•</span>
                <span>Don't mix categorical and sequential chart palettes</span>
              </li>
              <li class="flex gap-2">
                <span class="text-destructive">•</span>
                <span>Don't ignore contrast requirements for data visualization</span>
              </li>
            </ul>
          </CardContent>
        </Card>
      </div>
    </section>

    <!-- Implementation Section -->
    <section>
      <h2>Implementation</h2>

      <div class="grid gap-6 lg:grid-cols-2">
        <Card>
          <CardHeader>
            <CardTitle>CSS Variables</CardTitle>
          </CardHeader>
          <CardContent>
            <p class="text-small text-muted-foreground mb-4">
              Use CSS variables directly in custom styles
            </p>
            <pre
              class="bg-muted overflow-x-auto rounded p-4 font-mono text-xs">{`.my-component {
  background-color: var(--background);
  color: var(--foreground);
  border: 1px solid var(--border);
}

.my-button {
  background-color: var(--primary);
  color: var(--primary-foreground);
}

.my-button:hover {
  background-color: var(--accent);
}`}</pre>
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle>Tailwind Classes</CardTitle>
          </CardHeader>
          <CardContent>
            <p class="text-small text-muted-foreground mb-4">
              Use semantic utility classes for rapid development
            </p>
            <pre
              class="bg-muted overflow-x-auto rounded p-4 font-mono text-xs">{`<!-- Background and text -->
<div class="bg-background text-foreground">

<!-- Primary button -->
<button class="bg-primary text-primary-foreground">

<!-- Muted text -->
<p class="text-muted-foreground">

<!-- Card surface -->
<div class="bg-card text-card-foreground border-border">

<!-- Error state -->
<div class="bg-destructive text-destructive-foreground">`}</pre>
          </CardContent>
        </Card>
      </div>
    </section>
  </main>
</Layout>
