---
import { Button } from '@/components/ui/button';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import Layout from '@/layouts/Layout.astro';
---

<Layout>
  <main class="container mx-auto px-4 py-16">
    <section class="mb-16 text-center">
      <h1 class="font-heading text-display mb-4 font-bold tracking-tight">Basalt UI</h1>
      <p class="text-muted-foreground font-body text-body mx-auto mb-8 max-w-2xl">
        A framework-agnostic Tailwind CSS design system with zinc-based colors.
      </p>
      <div class="flex justify-center gap-4">
        <Button size="lg">
          <a href="/typography" class="text-primary-foreground">View Typography</a>
        </Button>
        <Button variant="outline" size="lg">
          <a href="https://github.com/jkrumm/basalt-ui">GitHub</a>
        </Button>
      </div>
    </section>

    <section class="grid gap-6 md:grid-cols-3">
      <Card>
        <CardHeader>
          <CardTitle>Framework Agnostic</CardTitle>
        </CardHeader>
        <CardContent>
          <p class="text-muted-foreground">Works with React, Vue, Svelte, or any framework.</p>
        </CardContent>
      </Card>

      <Card>
        <CardHeader>
          <CardTitle>Zinc-Based Design</CardTitle>
        </CardHeader>
        <CardContent>
          <p class="text-muted-foreground">Professional color palette based on zinc tones.</p>
        </CardContent>
      </Card>

      <Card>
        <CardHeader>
          <CardTitle>Dark Mode Ready</CardTitle>
        </CardHeader>
        <CardContent>
          <p class="text-muted-foreground">Built-in dark mode with CSS variables.</p>
        </CardContent>
      </Card>
    </section>
  </main>
</Layout>
