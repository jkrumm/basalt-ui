{
  "name": "basalt-ui-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*",
    "examples/*"
  ],
  "scripts": {
    "dev:web": "bun --filter web dev",
    "dev:react": "bun --filter react dev",
    "dev": "bun --filter '*' dev",
    "release": "release-it",
    "check": "bunx @biomejs/biome check .",
    "check:write": "bunx @biomejs/biome check --write .",
    "format": "bun run format:biome && bun run format:prettier",
    "format:biome": "bunx @biomejs/biome format --write .",
    "format:prettier": "bunx prettier --write '**/*.astro'",
    "lint": "bunx @biomejs/biome lint .",
    "typecheck": "bun --filter '*' typecheck",
    "pre": "bun run format && bun run lint && bun run typecheck",
    "prepare": "lefthook install",
    "hooks:install": "lefthook install",
    "hooks:uninstall": "lefthook uninstall"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "lefthook": "^2.0.8",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0,
        "always"
      ],
      "footer-max-line-length": [
        0,
        "always"
      ],
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "perf",
          "test",
          "build",
          "ci",
          "chore",
          "revert"
        ]
      ],
      "subject-case": [
        2,
        "never",
        [
          "upper-case",
          "pascal-case"
        ]
      ],
      "subject-empty": [
        2,
        "never"
      ],
      "subject-full-stop": [
        2,
        "never",
        "."
      ],
      "header-max-length": [
        2,
        "always",
        100
      ]
    }
  }
}
